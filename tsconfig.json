{
	"compilerOptions": {
		"allowJs": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"target": "ESNext",
		"removeComments": true,
		"listEmittedFiles": true,
		"pretty": true,
		"outDir": "dist"
	},

	"include": ["source"]
}
